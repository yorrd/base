{
    "compilerOptions": {
        "target": "es6",
        "lib": ["esnext", "es7", "webworker", "es5", "es6", "dom"],
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        },
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "allowJs": true,
        "isolatedModules": true
    },
    "compileOnSave": true
}
